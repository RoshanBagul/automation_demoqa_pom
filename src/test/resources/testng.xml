        <!-- <listener class-name="listeners.AdBlockerListener"/> -->
    </listeners>

    <test name="All Test">

        <groups>
            <run>
                <include name="smoke"/>
                <include name="api"/>
            </run>
        </groups>

        <classes>
            <class name = "tests.HomePageTest"/>
            <class name = "tests.Elements.ElementsPageTest"/>
            <class name = "tests.Elements.TextBoxTest"/>
            <class name = "tests.Elements.RadioButtonPageTest"/>
            <class name = "tests.Elements.WebTablePageTest"/>
            <class name=  "tests.Elements.ButtonsPageTest"/>
            <class name=  "tests.ApiStatusValidationTest"/>
        </classes>
    </test>
</suite>
